<div class="modal fade in" style="display:block;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" {{action closeAudioCollectionModal}}>
          <span aria-hidden="true">Ã—</span>
          <span class="sr-only">Close</span>
        </button>
        <h3 class="modal-title">
          {{#if isNew}}
            Create a new Collection
          {{else}}
            Editing: {{title}}
          {{/if}}
        </h3>
      </div>
      <form {{action saveAudioCollection on="submit"}}>
        <div class="modal-body">
          <div class="form-group">
            <label for="collection-title">Collection Title</label>
            {{input value=title class="form-control" id="collection-title" placeholder="Give your collection a name"}}
          </div>
        </div>
        <div class="modal-footer">
          {{#unless isNew}}
            <button class="btn btn-danger pull-left" {{action confirmDelete this}}>Delete</button>
          {{/unless}}
          <button type="submit" class="btn btn-primary" {{bind-attr disabled="shouldDisableSubmit"}}>Save</button>
        </div>
      </form>
    </div>
  </div>
</div>